<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical"
    android:gravity="center"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@drawable/sr2_transparent_bordered">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="64dp"
      android:orientation="horizontal">

      <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/setFontSerif"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/settingsAccessibilitySetSerif"
        android:clickable="true"
        android:focusable="true">
        <TextView
          android:id="@+id/setFontSerifText"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:singleLine="true"
          android:ellipsize="end"
          android:background="@drawable/sr2_transparent_bordered"
          android:gravity="center"
          android:text="@string/settingsAa"
          android:textAlignment="center"
          android:textColor="#000000"
          android:textSize="18sp"
          android:clickable="false"
          android:focusable="false"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />
      </androidx.constraintlayout.widget.ConstraintLayout>

      <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/setFontSans"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/settingsAccessibilitySetSans"
        android:clickable="true"
        android:focusable="true">

        <TextView
          android:id="@+id/setFontSansText"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:singleLine="true"
          android:ellipsize="end"
          android:background="@drawable/sr2_transparent_bordered"
          android:gravity="center"
          android:text="@string/settingsAa"
          android:textAlignment="center"
          android:textColor="#000000"
          android:textSize="18sp"
          android:clickable="false"
          android:focusable="false"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />
      </androidx.constraintlayout.widget.ConstraintLayout>

      <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/setFontDyslexic"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/settingsAccessibilitySetDyslexic"
        android:clickable="true"
        android:focusable="true">

        <TextView
          android:id="@+id/setFontDyslexicText"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:singleLine="true"
          android:ellipsize="end"
          android:background="@drawable/sr2_transparent_bordered"
          android:gravity="center"
          android:text="@string/settingsAa"
          android:textAlignment="center"
          android:textColor="#000000"
          android:textSize="18sp"
          android:clickable="false"
          android:focusable="false"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />
      </androidx.constraintlayout.widget.ConstraintLayout>

      <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/setFontPub"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/settingsAccessibilitySetPublisher"
        android:clickable="true"
        android:focusable="true">

        <TextView
          android:id="@+id/setFontPubText"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:singleLine="true"
          android:ellipsize="end"
          android:background="@drawable/sr2_transparent_bordered"
          android:gravity="center"
          android:text="@string/settingsPub"
          android:textAlignment="center"
          android:textColor="#000000"
          android:textSize="18sp"
          android:clickable="false"
          android:focusable="false"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />
      </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
      android:id="@+id/setFontDetail"
      android:layout_width="match_parent"
      android:layout_height="90sp"
      android:orientation="vertical">

      <TextView
        android:id="@+id/setFontDetailHeader"
        android:layout_width="match_parent"
        android:layout_height="25sp"
        android:textStyle="bold"
        android:paddingHorizontal="10sp"
        android:paddingTop="10sp"
        android:paddingBottom="0sp"
        android:gravity="center_vertical" />

      <TextView
        android:id="@+id/setFontDetailBody"
        android:layout_width="match_parent"
        android:layout_height="65sp"
        android:padding="10sp"
        android:gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="64dp"
      android:orientation="horizontal">

      <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/setThemeDark"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/sr2_black"
        android:contentDescription="@string/settingsAccessibilitySetWhiteTextOnBlack"
        android:clickable="true"
        android:focusable="true">
        <TextView
          android:id="@+id/setThemeDarkText"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:singleLine="true"
          android:ellipsize="end"
          android:background="?attr/selectableItemBackground"
          android:gravity="center"
          android:text="@string/settingsAbc"
          android:textAlignment="center"
          android:textColor="#FFFFFF"
          android:textSize="18sp"
          android:clickable="false"
          android:focusable="false"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />
      </androidx.constraintlayout.widget.ConstraintLayout>

      <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/setThemeSepia"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/sr2_beige"
        android:contentDescription="@string/settingsAccessibilitySetBlackTextOnSepia"
        android:clickable="true"
        android:focusable="true">

        <TextView
          android:id="@+id/setThemeSepiaText"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:singleLine="true"
          android:ellipsize="end"
          android:background="?attr/selectableItemBackground"
          android:gravity="center"
          android:text="@string/settingsAbc"
          android:textAlignment="center"
          android:textColor="#000000"
          android:textSize="18sp"
          android:clickable="false"
          android:focusable="false"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />
      </androidx.constraintlayout.widget.ConstraintLayout>


      <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/setThemeLight"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/sr2_white"
        android:contentDescription="@string/settingsAccessibilitySetBlackTextOnWhite"
        android:clickable="true"
        android:focusable="true">

        <TextView
          android:id="@+id/setThemeLightText"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:singleLine="true"
          android:ellipsize="end"
          android:background="?attr/selectableItemBackground"
          android:gravity="center"
          android:text="@string/settingsAbc"
          android:textAlignment="center"
          android:textColor="#000000"
          android:textSize="18sp"
          android:clickable="false"
          android:focusable="false"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />
      </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="64dp"
      android:orientation="horizontal">

      <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/setTextSmaller"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/settingsAccessibilitySetSizeSmaller"
        android:clickable="true"
        android:focusable="true">

        <TextView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:singleLine="true"
          android:ellipsize="middle"
          android:background="@drawable/sr2_transparent_bordered"
          android:text="@string/settingsA"
          android:textAlignment="center"
          android:textSize="16sp"
          android:clickable="false"
          android:focusable="false"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />
      </androidx.constraintlayout.widget.ConstraintLayout>

      <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/setTextLarger"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:singleLine="true"
        android:ellipsize="middle"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/settingsAccessibilitySetSizeLarger"
        android:clickable="true"
        android:focusable="true">

        <TextView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:singleLine="true"
          android:ellipsize="middle"
          android:background="@drawable/sr2_transparent_bordered"
          android:gravity="center"
          android:text="@string/settingsA"
          android:textAlignment="center"
          android:textSize="22sp"
          android:clickable="false"
          android:focusable="false"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />
      </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
      android:background="@drawable/sr2_transparent_bordered"
      android:layout_width="match_parent"
      android:layout_height="64dp">

      <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sr2_brightness_low" />

      <SeekBar
        android:id="@+id/setBrightness"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/settingsAccessibilityBrightnessSlider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

      <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sr2_brightness_high" />

    </androidx.constraintlayout.widget.ConstraintLayout>
  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
